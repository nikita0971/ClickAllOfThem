<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.myapplication.Shop">

        <Button
            android:id="@+id/Lot1"

            android:layout_width="match_parent"
            android:layout_height="61dp"

            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/Lot2"
            android:layout_alignEnd="@+id/Lot2"

            android:text="Lot 1"/>

        <Button
            android:id="@+id/Lot2"

            android:layout_width="match_parent"
            android:layout_height="61dp"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Lot1"

            android:textColor="@android:color/holo_purple"
            android:text="Lot 2"/>

        <Button
            android:id="@+id/Lot3"

            android:layout_width="match_parent"
            android:layout_height="61dp"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Lot2"

            android:textColor="@android:color/holo_purple"
            android:text="Lot 3"/>

        <Button
            android:id="@+id/Lot4"

            android:layout_width="match_parent"
            android:layout_height="61dp"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Lot3"

            android:textColor="@android:color/holo_purple"
            android:text="Lot 4"/>

        <Button
            android:id="@+id/Lot5"

            android:layout_width="match_parent"
            android:layout_height="61dp"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Lot4"

            android:textColor="@android:color/holo_purple"
            android:text="Lot 5"/>

        <Button
            android:id="@+id/Lot6"

            android:layout_width="match_parent"
            android:layout_height="61dp"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Lot5"

            android:textColor="@android:color/holo_purple"
            android:text="Lot 6"/>

        <TextView
            android:id="@+id/ED"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Lot6"/>
    </RelativeLayout>
</ScrollView>

